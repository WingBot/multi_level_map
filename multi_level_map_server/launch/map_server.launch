<launch>

  <arg name="map_name_1" default="demo1" />
  <arg name="map_name_2" default="demo2" />
  <arg name="map_file_1" default="$(find multi_level_map_server)/maps/demo1.yaml"/>
  <arg name="map_file_2" default="$(find multi_level_map_server)/maps/demo2.yaml"/>

  <!-- Start the bwi map server with the ens split map specifications-->
  <node name="multi_level_map_server" pkg="multi_level_map_server" type="multi_level_map_server">
    <param name="maps/$(arg map_name_1)/yaml" value="$(arg map_file_1)" />
    <rosparam param="maps/$(arg map_name_1)/origin">[0, 0, 0, 0, 0, 0]</rosparam>
    <param name="maps/$(arg map_name_2)/yaml" value="$(arg map_file_2)" />
    <rosparam param="maps/$(arg map_name_2)/origin">[18, 0, 0, 0, 0, 0]</rosparam>
    <rosparam param="links">[{from_point: {level_id: demo1, point: [8, 0.5, 0]}, to_point: {level_id: demo2, point: [0.5, 0.5, 0]}}]</rosparam>
  </node>

</launch>
